{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "rules": {
    "no-explicit-any": [
      true
    ],
    "trailing-comma": [
      false
    ],
    "no-console": [
      true,
      "log",
      "error"
    ]
  },
  "include": [
    "**/*"
  ]
}